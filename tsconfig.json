{
    "compilerOptions": {
        "outDir": "./dist",
        "module": "commonjs",
        "target": "es5",
        "sourceMap": true,
        "allowJs": true,
        "jsx": "react",
        "moduleResolution": "node",
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": false,
        "strictNullChecks": true,
    },
    "exclude": [
        "node_modules"
    ],
    "types": [
        "typePatches"
    ],
    "typedocOptions": {
        "mode": "modules",
        "out": "./generated/documentation",
        "excludeExternals": "true"
    }
}